/* page/posts/post-item/page-item-template.wxss */
.post-container{
  display: flex;
  flex-direction: column;
  margin:20rpx 0 40rpx;
  background: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
}
.post-author{
  width:60rpx;
  height:60rpx;
  vertical-align: middle;
}
.post-date{
  vertical-align: middle;
  margin-left:20rpx;
  font-size:26rpx;
}
.post-title{
  font-size:34rpx;
  font-weight: 600;
  color:#ccc;
  margin:5px 0 10px 10px;
}
.post-image{
  width:100%;
  height:340rpx;
  margin:0 auto 15px;

}
.post-content{
  color:#666;
  font-size:28rpx;
  margin:0 0 20rpx 20rpx;
}
.post-like{
  font-size:13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image{
  width:16px;
  height:16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
}